  display: block;
  font-size: 14px;
  color: #444;
  max-width: 500rpx; 
  overflow: hidden;     
  text-overflow: ellipsis;
  white-space: nowrap;
}
.clothes-operate{
  border-top: 1rpx solid #e5e5e5;
