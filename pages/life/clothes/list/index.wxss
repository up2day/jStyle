}
.clothes-item{
  background: #fff;
  max-height: 660rpx; 
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
}
.clothes-img-wrapper{
  max-height: 480rpx;
  margin-bottom:30rpx;
}
