page {
  background: #f9f9f9;
}

.container{
  position: relative;
}

.search-wrapper {
  padding: 24rpx;
}

.search-btn {
  display: block;
  line-height: 60rpx;
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 5px;
  text-align: center;
  color: #ccc;
}

.tabs-wrapper {
  padding: 0 24rpx;
  position: relative;
  z-index: 2;
}

.tabs-header {
  display: flex;
  border-bottom: 1rpx solid #999;
}

.tabs-header .active {
  color: #333;
  position: relative;
}

.tabs-header .active:before {
  position: absolute;
  bottom: -3rpx;
  left: 0;
  content: '';
  width: 100%;
  height: 7rpx;
  background: #8abcd1;
}

.tabs-item {
  display: block;
  flex: 1;
  padding: 0 0 20rpx;
  text-align: center;
}
.tabs-content{
  padding: 24rpx;
}
.nodata-tips {
  display: block;
  padding: 120rpx 80rpx;
  line-height: 1.5;
}

.edit-wrapper{
  position: fixed;
  bottom: 50rpx;
  right: 60rpx;
  z-index: 4;
  line-height: 80rpx;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  border-radius: 50%;
  background: #53add3;
  color: #fff;
}
.edit-wrapper .icon-edit{
  font-size: 42rpx;
}
.notice-wrapper{
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.9);
  width: 100%;
  line-height: 60rpx;
  height: 60rpx;
}

.notice-label{
  font-size: 30rpx;
  padding: 0 0 0 20rpx;
}
.close-notice{
  position: absolute;
  top: 0rpx;
  right: 10rpx;
  z-index: 2;
  padding: 10rpx;
  font-size: 36rpx;
}
/*首页跑马灯效果*/
@keyframes around {
  from {
   margin-left: 100%;
  }
  to {
   /* var接受传入的变量 */
   margin-left: var(--marqueeWidth--);
  }
 }
 
.marquee_container{
  position: relative;
  margin-top:0rpx;
}
.marquee_container:hover{
  /* 不起作用 */
  animation-play-state: paused;
}
.marquee_text{
  color:#333;
  font-size: 30rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s;  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
}
